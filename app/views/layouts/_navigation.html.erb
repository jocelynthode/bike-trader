<%# navigation styled for Bootstrap 3.0 %>
<br />
<div class="container">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'E-Bikes', root_path, class: 'navbar-brand', style: "font-weight: bold" %>
    </div>
    <div class="collapse navbar-collapse">
      <div class="col-lg-4 nav" style="margin-top:8px">
        <%= form_tag auctions_path, method: "get" do %>
            <div class="input-group">
              <%= search_field_tag 'q[title_or_text_or_color_or_brand_cont]', nil, class: "form-control", placeholder: "Search auctions..." %>
              <span class="input-group-btn">
                <%= submit_tag 'Search', class: "btn btn-default" %>
              </span>
            </div><!-- /input-group -->
        <% end %>
      </div><!-- /.col-lg-6 -->
      <ul class="nav navbar-nav navbar-right">
        <%= link_to 'My Auctions', auctions_path, class: 'navbar-brand' %>
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
</div>