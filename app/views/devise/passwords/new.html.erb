<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="form-signin-heading">Forgot your password?</h3>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Reset Password", class:"btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

