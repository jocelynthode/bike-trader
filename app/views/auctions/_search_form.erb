<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <a role="button" data-target="#adv_auction_search" data-toggle="collapse" class="btn btn-primary">Use advanced
          search</a>
      </div>
      <div class="panel-body">
        <%= search_form_for @search, namespace: "adv",
                            html: {id: 'adv_auction_search',
                                   class: 'form-horizontal '+@collapse_form} do |f| %>

            <%= hidden_field_tag 'show_adv', 1 %>
            <div class="form-group">
              <%= f.label :title_cont, class: 'control-label' %>
              <%= f.search_field :title_cont %>
            </div>
            <div class="form-group">
              <%= f.label :text_cont, class: 'control-label' %>
              <%= f.search_field :text_cont %>
            </div>
            <div class="form-group">
              <%= f.label :color_cont, class: 'control-label' %>
              <%= f.search_field :color_cont %>
            </div>
            <div class="form-group">
              <%= f.label :brand_cont, class: 'control-label' %>
              <%= f.search_field :brand_cont %>
            </div>
            <div class="form-group between">
              <%= f.label :mileage_gt, 'Mileage (km) between', class: 'control-label' %>

              <%= f.text_field :mileage_gt %>
              <%= f.label :mileage_lt, 'and', class: 'control-label' %>
              <%= f.text_field :mileage_lt %>
            </div>
            <div class="form-group between">
              <%= f.label :kwh_gt, 'Capacity (kWh) between', class: 'control-label' %>

              <%= f.text_field :kwh_gt %>
              <%= f.label :kwh_lt, 'and', class: 'control-label' %>
              <%= f.text_field :kwh_lt %>
            </div>
            <div class="form-group">
              <%= f.label :user_username, 'Seller username is', class: 'control-label' %>
              <%= f.search_field :user_username %>
            </div>
            <div class="form-group">
              <%= f.submit class: 'col-sm-offset-3' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>