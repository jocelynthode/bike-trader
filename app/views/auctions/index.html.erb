<div class="row">
    <div class="col-xs-6 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
            E-Bikes
            <div class="pull-right"><%= button_to 'New auction', new_auction_path, :method => 'get' %></div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>Title</th>
                <th>Text</th>
              </tr>
              </thead>
              <tbody>
              <% @auctions.each do |auction| %>
                  <tr>
                    <td><%= auction.title %></td>
                    <td><%= auction.text %></td>
                    <td><%= button_to 'Show', auction_path(auction), :method => 'get' %></td>
                    <% if user_signed_in? and current_user.id == auction.user_id %>
                        <td><%= button_to 'Edit', edit_auction_path(auction), :method => 'get' %></td>
                        <td><%= button_to 'Destroy', auction_path(auction),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' }, 
                                        :method => 'get' %></td>
                    <% end %>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
