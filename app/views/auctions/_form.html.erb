<%= form_for :auction, url: auctions_path, locals: editable do |f| %>

    <% if @auction.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@auction.errors.count, 'error') %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @auction.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.label :start %><br>
      <% if editable %>
        <%= f.datetime_select :start %>
      <% else %>
          <%= f.text_field :start, :value => @auction.start, :readonly=>true %>
      <% end %>
    </p>

    <p>
      <%= f.label :end %><br>
      <% if editable %>
          <%= f.datetime_select :end %>
      <% else %>
          <%= f.text_field :end, :value => @auction.end, :readonly=>true %>
      <% end %>
    </p>

    <p>
      <%= f.label :kwh %><br>
      <%= f.text_field :kwh %>
    </p>

    <p>
      <%= f.label :mileage %><br>
      <%= f.text_field :mileage %>
    </p>

    <p>
      <%= f.label :color %><br>
      <%= f.text_field :color %>
    </p>

    <p>
      <%= f.label :brand %><br>
      <%= f.text_field :brand %>
    </p>

    <p>
      <%= f.label :minimum_price %><br>
      <% if editable %>
          <%= f.text_field :minimum_price %>
      <% else %>
          <%= @auction.minimum_price %>
      <% end %>
    </p>

    <p>
      <%= f.label 'Image' %>
      <%= f.file_field :avatar %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>